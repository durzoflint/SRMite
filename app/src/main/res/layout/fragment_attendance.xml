<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Coursewise Attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adView"
        android:layout_centerHorizontal="true"
        android:id="@+id/attendance"
        android:textSize="24sp"
        android:paddingTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/attendance"
        android:id="@+id/date"
        android:textSize="14sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totaldata"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:text="Max Hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/maxhourstext"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Att. Hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/atthourstext"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Absent Hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/absenthourstext"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Average %"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/averagetext"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="OD/ML %"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/od_mltext"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Total %"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalpercentage"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/attendancedata"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingBottom="50dp" />
        </ScrollView>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/Attendance_Banner">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>