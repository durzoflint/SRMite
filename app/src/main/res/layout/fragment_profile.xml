<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adView"
        android:id="@+id/photoandname"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:foregroundGravity="center"
        android:gravity="center">

        <TextView
            android:text="Your Name Comes Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:id="@+id/name"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginBottom="6dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:layout_below="@+id/photoandname"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/photoandname"
            android:layout_alignParentStart="true"
            android:id="@+id/data"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/regnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Register Number : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Section : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Semester : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/officename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Office Name : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Course Name : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/fathersname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Father's Name : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Date of Birth : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Sex : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/bloodgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Bloodgroup : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Address : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/mobilenumbner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Mobile Number : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Pincode : "
                android:textSize="19sp" />

            <TextView
                android:id="@+id/validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Validity"
                android:textSize="19sp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/Profile_Banner">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>