<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="innominatebit.srmite.AboutUs">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/srmite"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/abhinav"
                    android:id="@+id/abhinavdp"
                    android:layout_marginRight="6dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/abhinavtext"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_alignBottom="@+id/abhinavdp"
                    android:layout_toEndOf="@+id/abhinavdp"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/dhanya"
                    android:id="@+id/dhanyadp"
                    android:layout_below="@+id/abhinavtext"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="6dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dhanyatext"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/dhanyadp"
                    android:layout_alignTop="@+id/dhanyadp"
                    android:layout_marginTop="12dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/gurkeerat"
                    android:id="@+id/gurkeeratdp"
                    android:layout_below="@+id/dhanyadp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gurkeerattext"
                    android:gravity="center"
                    android:layout_alignTop="@+id/gurkeeratdp"
                    android:layout_alignStart="@+id/abhinavtext"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
